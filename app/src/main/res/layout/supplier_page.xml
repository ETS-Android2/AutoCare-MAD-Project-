<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="50px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="60px"
                    android:layout_marginTop="150px"
                    android:layout_marginEnd="50px"
                    android:layout_marginBottom="50px"
                    android:background="@drawable/btn1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="60px"
                        android:text="@string/Add"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="190px"
                        android:text="@string/Add_mess"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/add_item_btn"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="120dp"
                        android:backgroundTint="#3742A3"
                        android:text="@string/add_btn"
                        app:cornerRadius="100px" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="60px"
                    android:src="@drawable/supplierimg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="150px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="60px"
                    android:layout_marginTop="150px"
                    android:layout_marginEnd="50px"
                    android:layout_marginBottom="50px"
                    android:background="@drawable/btn2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="60px"
                        android:text="@string/view"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="170px"
                        android:text="@string/view_mess"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/update_btn"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="110dp"
                        android:backgroundTint="#3742A3"
                        android:text="@string/view_btn"
                        app:cornerRadius="100px" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="60px"
                    android:src="@drawable/supplierview" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>